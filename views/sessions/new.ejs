<head>
    <%- include ('../partials/head.ejs') %>
        <title>Log in</title>
</head>

<body>

    <div class="navbar-fixed">
        <nav class="nav-wrapper cyan darken-4">
            <a href="#" class="brand-logo">Bibliologic</a>
        </nav>
    </div>
    <div class="container" id="login-screen">
        <div id="login-form">
            <h1>Log In</h1>
            <form action="/sessions" method="POST">
                <div class="input-field login">
                    <label for="name">Username:</label>
                    <input type="text" name="username" required />
                </div>
                <div class="input-field login">
                    <label for="password">Password:</label>
                    <input type="password" name="password" required /><br>
                </div>
                <button type="submit" value="Submit" class="btn waves-effect waves-light">Log In</button>
                <a href="/users/new" class="btn waves-effect waves-light">Sign Up</a>
            </form>
        </div>
    </div>
</body>

</html>