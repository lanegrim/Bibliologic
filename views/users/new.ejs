<head>
    <%- include ('../partials/head.ejs') %>
        <title>New User</title>
</head>

<body class="login-body">
    <div class="navbar-fixed">
        <nav class="nav-wrapper cyan darken-4">
            <a href="#" class="brand-logo">Bibliologic</a>
        </nav>
    </div>
    <div class="container" id="login-screen">
        <div id="login-form">
            <h1>Create an Account</h1>
            <form action="/users" method="POST">
                <div class="input-field">
                    <label for="name">Username:</label>
                    <input type="text" name="username" required />
                </div>
                <div class="input-field">
                    <label for="password">Password:</label>
                    <input type="password" name="password" /><br>
                </div>
                <div id="signup-row">
                    <button type="submit" value="Submit" class=" sign-up btn waves-effect waves-light">Sign Up</button>
                    <div id="login-prompt-body">
                        <p id="login-prompt">Already have an account?</p>
                        <a href="/sessions/new" class="btn waves-effect waves-light">Log In</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>