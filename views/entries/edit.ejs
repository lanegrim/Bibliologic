<head>
    <%- include ('../partials/head.ejs') %>
        <title>Edit</title>
</head>

<body>
    <%- include ('../partials/header.ejs') %>
        <div class="container">
            <h1 id="edit-heading">Edit Entry</h1>
            <form action="/entries/<%=entry.id%>?_method=PUT" method="POST" class="entry-form">
                <label for="title">Title:</label>
                <input type="text" name="title" required value="<%=entry.title%>"> <br>

                <label for="author">Author:</label>
                <input type="text" name="author" required value="<%=entry.author%>"> <br>

                <label for="image">Image Link:</label>
                <input type="text" name="image" value="<%=entry.image%>"> <br>

                <label for="genre">Genre:</label>
                <input type="text" name="genre" value="<%=entry.genre%>"> <br>

                <label for="rating">Rating:</label>
                <input type="text" name="rating" value="<%=entry.rating%>"> <br>

                <label for="notes" id="notes-label">Notes:</label>
                <textarea name="notes" cols="30" rows="20"><%=entry.notes%></textarea> <br>

                <input type="hidden" name="owner" value=<%=currentUser.username%>>

                <button class="mobile-btn btn waves-effect waves-light" type="submit" name="action"
                    id="submit-edits">Submit Edits</button>
            </form>
        </div>
</body>

</html>