<head>
    <%- include ('../partials/head.ejs') %>
        <title>Edit</title>
</head>

<body>

    <h1>Edit Entry</h1>
    <form action="/entries/<%=entry.id%>?_method=PUT" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" required value="<%=entry.title%>"> <br>

        <label for="author">Author:</label>
        <input type="text" name="author" required value="<%=entry.author%>"> <br>

        <label for="image">Image Link:</label>
        <input type="text" name="image" value="<%=entry.image%>"> <br>

        <label for="genre">Genre:</label>
        <input type="text" name="genre" value="<%=entry.genre%>"> <br>

        <label for="rating">Rating:</label>
        <input type="text" name="rating" value="<%=entry.rating%>"> <br>

        <label for="notes">Notes:</label>
        <input type="text" name="notes" value="<%=entry.notes%>"> <br>

        <input type="text" name="owner" value=<%=currentUser.username%> style="display:none;">

        <input type="submit" value="Submit Edits">
    </form>

</body>

</html>