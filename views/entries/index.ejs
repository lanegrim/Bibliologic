<head>
    <%- include ('../partials/head.ejs') %>
        <title>My Bookshelf</title>
</head>

<body>
    <%- include ('../partials/header.ejs') %>
        <div class="container index">
            <h1 id="index-heading">
                <%=currentUser.username%>'s Bookshelf
            </h1>
            <div class="entry-board">
                <% for (let entry of entries ) { %>
                    <div class="entry-card book">
                        <!-- <a href="/entries/<%=entry.id%>" class="title teal-text text-darken-4">
                            <%=entry.title%>
                        </a> -->
                        <img src="<%=entry.image%>" alt="<%=entry.title%>" class="entry-img"
                            onclick="window.location ='/entries/<%=entry.id%>'">
                    </div>
                    <% } %>

                        <div class="entry-card" id="new-card" onclick="window.location='/entries/new'">
                            <a href="/entries/new"
                                class="new-entry btn-floating btn-large waves-effect waves-light cyan darken-4"><i
                                    class="material-icons">add</i></a>
                        </div>
            </div>
        </div>
        <%- include ('../partials/footer.ejs') %>
</body>

</html>